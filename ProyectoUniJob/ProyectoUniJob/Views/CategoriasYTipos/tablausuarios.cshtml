@using System.Data;
@model DataTable

@{
    ViewBag.Title = "tablausuarios";
    //Layout = "~/Views/BackEnd/MasterPage/_layoutBackEnd.cshtml";
}
<div class="content table-responsive table-full-width">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr id="fila_@row["Codigo"]">
                    <td>@row["Codigo"]</td>
                    <td><input type="text" class="form-control  border-input" name="Tipo" placeholder="Tipo" value="@row["Tipo"]" /></td>
                    <td>
                        @Html.ActionLink("Eliminar", "Eliminar", "AgregarEstudiante", new { id = @row["Tipo"] }, null)
                        @Html.ActionLink("Actualizar", "TablaActualizarCate", "CategoriasYTipos", new { id = @row["Codigo"] },new { onclick = "actualizarcategoria()" })
                        @*<input type="button" id="btn4" value="Actualizar" class="btn btn-success" onclick="actualizarcategoria()" />*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


