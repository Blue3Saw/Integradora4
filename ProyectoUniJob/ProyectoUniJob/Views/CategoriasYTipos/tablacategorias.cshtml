@using System.Data;
@model DataTable

@{
    ViewBag.Title = "tablacategorias";
    //Layout = "~/Views/BackEnd/MasterPage/_layoutBackEnd.cshtml";
}

<div class="content table-responsive table-full-width col-lg-6">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
        @foreach (DataRow row in Model.Rows)
        {
                <tr id="fila_@row["Codigo"]">
                    <td>@row["Codigo"]</td>
                    <td><input type="text" class="form-control  border-input" name="Tipo" id="Tipo" placeholder="Tipo" value="@row["Clasificacion"]" />
                        <input type="hidden" class="form-control border-input" name="Codigo" placeholder="img" value="@row["Codigo"]" readonly="readonly" />
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "Eliminar", "CategoriasYTipos", new { id = @row["Codigo"] }, null)
                        @Html.ActionLink("Actualizar", "actualizarcategoria", "CategoriasYTipos", new { id = @row["Codigo"]}, null)
                    </td>
                </tr>
        }
        </tbody>
     </table>
</div>
