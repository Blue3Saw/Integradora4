        }
        var map = new google.maps.Map(document.getElementById("map"), mapOptions);
        @*foreach (string item in Model)
        {
            @Html.Raw(item);
        }*@


    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDMQH1D6-iDnL3zzh8QFuO2nX_CujOx-dc&callback=initMap">
