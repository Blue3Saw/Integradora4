<script src="~/Recursos/FontEnd/js/locationpicker.jquery.js"></script>
<script>

    $('#MapPreview').locationpicker({
        radius: 0,
        location: {
            latitude: 20.938297181414647,
            longitude: -89.61501516379462
        },
        enableAutocomplete: true,
        inputBinding: {
            latitudeInput: $('#Latitud'),
