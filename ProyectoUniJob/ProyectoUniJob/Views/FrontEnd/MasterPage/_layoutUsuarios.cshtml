            <!--//logo-->
            <div class="w3layouts-login">
                <a href=@Url.Action("CerrarSesion", "Usuario")><i class="glyphicon glyphicon-user"></i> Cerrar sesión</a>
            </div>   
            <div class="clearfix"></div>
        </div>
    </header>
    <!-- //header -->
