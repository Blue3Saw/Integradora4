    <!-- breadcrumbs -->
    @RenderBody()

    <!--Plug-in Initialisation-->
    <script type="text/javascript">
    $(document).ready(function() {
        //Horizontal Tab
        $('#parentHorizontalTab').easyResponsiveTabs({
            type: 'default', //Types: default, vertical, accordion
            width: 'auto', //auto or any width like 600px
            fit: true, // 100% fit in a container
            tabidentify: 'hor_1', // The tab groups identifier
            activate: function(event) { // Callback function if tab is switched
                var $tab = $(this);
                var $info = $('#nested-tabInfo');
                var $name = $('span', $info);
                $name.text($tab.text());
                $info.show();
            }
        });
    });
    </script>
    <!-- // Pay -->
    <!-- subscribe -->
    <div class="w3-subscribe agileits-w3layouts">
        <div class="container">
            <div class="col-md-6 social-icons w3-agile-icons">
                <h4>Únete</h4>
                <ul>
                    <li><a href="#" class="fa fa-facebook sicon facebook"> </a></li>
                    <li><a href="#" class="fa fa-twitter sicon twitter"> </a></li>
                    <li><a href="#" class="fa fa-google-plus sicon googleplus"> </a></li>
                    @*<li><a href="#" class="fa fa-dribbble sicon dribbble"> </a></li>
                    <li><a href="#" class="fa fa-rss sicon rss"> </a></li>*@
                </ul>
            </div>
            <div class="col-md-6 w3-agile-subscribe-right">
                <h3 class="w3ls-title">Manda un mensaje al<br><span>Administrador</span></h3>
                <h3 class="w3ls-title btn btn-success right" data-toggle="modal" data-target="#1">Mensaje</h3>
                <div class="modal fade" id="1" tabindex="-1" role="dialog"
                     aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                    &times;
                                </button>
                                <h4 class="modal-title" id="myModalLabel">
                                    Mensaje para administrador
                                </h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12 extra-w3layouts" style="border-right: 1px dotted #C2C2C2;padding-right: 30px;">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="Login">
                                                <div class="form-horizontal">
                                                    @using (Ajax.BeginForm("enviaradm", "Usuario", new AjaxOptions() { HttpMethod = "POST" }))
                                                    {
                                                        <div class="form-group">
                                                            <div class="col-sm-6">
                                                                <h4>Titulo</h4>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <h5>Para: Administrador</h5>
                                                                <input type="hidden" class="form-control" name="nombre" placeholder="nombre" required="required" value="2" />
                                                                <input type="hidden" class="form-control" name="id" placeholder="id" required="required" value="1" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-sm-12">
                                                                <input type="text" class="form-control border-input" name="Titulo" placeholder="Titulo" required="required" />
                                                            </div>
                                                        </div>
                                                            <div class="form-group">
                                                                <div class="col-sm-12">
                                                                    <h4>Mensaje</h4>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <div class="col-sm-12">
                                                                    <textarea class="form-control  border-input" name="Mensaje" placeholder="Mensaje" required="required"></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="row centrar">
                                                                <div class="col-sm-12">
                                                                    <button type="submit" class="btn btn-success" name="agregar" value="1">Enviar</button>
                                                                </div>
                                                            </div>
                                                    }
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
