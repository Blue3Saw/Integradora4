@using BO;
@model UsuarioBO

@{
    ViewBag.Title = "DatosPerfil";
    Layout = "~/Views/BackEnd/MasterPage/_layoutBackEnd.cshtml";
}
@using (Html.BeginForm("actualizar", "PerfilAdmin", FormMethod.Post))
{
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="card card-user">
                    <div class="image">
                        <img src="assets/img/background.jpg" alt="...">
                    </div>
                    <div class="content">
                        <div class="author">
                            <img class="avatar border-white" src="assets/img/faces/face-2.jpg" alt="...">
                            <h4 class="title">
                                Chet Faker<br>
                                <a href="#"></a>
                            </h4>
                        </div>
                        <p class="description text-center">
                            "I like the way you work it <br>
                            No diggity <br>
                            I wanna bag it up"
                        </p>
                    </div>
                    <hr>
                </div>
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Editar Perfil</h4>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>ID</label>
                                        @Html.TextBoxFor(x => x.Codigo, new { @type = "text", @name = "Id", @class = "form-control border-input" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Nombre</label>
                                        @Html.TextBoxFor(x => x.Nombre, new { @type = "text", @name = "Nombre", @class = "form-control border-input" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Apellidos</label>
                                        @Html.TextBoxFor(x => x.Apellidos, new { @type = "text", @name = "Apellidos", @class = "form-control border-input" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Correo</label>
                                        @Html.TextBoxFor(x => x.Email, new { @type = "email", @name = "email", @class = "form-control border-input" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Contraseña</label>
                                        @Html.TextBoxFor(x => x.Contraseña, new { @type = "text", @name = "Contraseña", @class = "form-control border-input" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Fecha De Nacimiento</label>
                                        @Html.TextBoxFor(x => x.FechaNac, new { @type = "date", @name = "Id", @class = "form-control border-input" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Dirrecion</label>
                                        <input class="form-control border-input" placeholder="City" value="Melbourne" type="text">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Telefono</label>
                                        @Html.TextBoxFor(x => x.Telefono, new { @type = "tel", @name = "Telefono", @class = "form-control", @onkeypress = "return valida(event)", @maxlength = "10", @pattern = "[0-9]{10}" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Imagen</label>
                                        @Html.TextBoxFor(x => x.Telefono, new { @type = "file", @name = "Imagen", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>About Me</label>
                                        <textarea rows="5" class="form-control border-input" placeholder="Here can be your description" value="Mike">
                                            Oh so, your weak rhyme
                                            You doubt I'll bother, reading into it
                                            I'll probably won't, left to my own devices
                                            But that's the difference in our opinions.
                                        </textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-info btn-fill btn-wd">Actualizar</button>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
}
