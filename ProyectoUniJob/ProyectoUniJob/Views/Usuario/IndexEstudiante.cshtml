
@{
    ViewBag.Title = "IndexEstudiante";
    Layout = "~/Views/FrontEnd/MasterPage/_layoutUsuarios.cshtml";
}

<div class="w3layouts-breadcrumbs text-center">
    <div class="container">
        <span class="agile-breadcrumbs"><a href=@Url.Action("IndexEstudiante", "Usuario")><i class="fa fa-home home_1"></i></a> / <span>Estudiante</span></span>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.0.3/sweetalert2.all.js"></script>

<div class="agile-pay w3layouts-content">
    <div class="container">
        <h3 class="w3-head">Bienvenid&#64;: @Session["Nombre"]</h3>
        <!--Horizontal Tab-->
        <div id="parentHorizontalTab">
            <ul class="resp-tabs-list hor_1">
                <li>Inicio</li>
                <li id="tdispo">Tareas disponibles</li>
                <li id="pestmtareas">Mis tareas</li>
                <li>Mensajes</li>
                <li id="pestPerfil">Perfil</li>
            </ul>
            <div class="resp-tabs-container hor_1">
                <div id="Inicio">

                </div>

                <!--Todas las tareas-->
                <div id="alltareas">
                    

                </div>
                <!--Fin Tareas-->

                <!--Pestaña Mis tareas-->
                <div id="mistareas">

                </div>
                <!--Fin Mis tareas-->
                

                <!--Pestaña mensajes-->
                <div>
                    <div id="tab4" class="tab-grid" style="display: block;">
                        <div class="row">
                            <div class="col-md-6">
                                <img class="pp-img" src="~/Recursos/FontEnd/images/paypal.png" alt="Image Alternative text" title="Image Title">
                                <p>Important: You will be redirected to PayPal's website to securely complete your payment.</p><a class="btn btn-primary">Checkout via Paypal</a>
                            </div>
                            <div class="col-md-6">
                                <div class="cc-form">
                                    <div class="clearfix">
                                        <div class="form-group form-group-cc-number">
                                            <label>Card Number</label>
                                            <input class="form-control" placeholder="xxxx xxxx xxxx xxxx" type="text"><span class="cc-card-icon"></span>
                                        </div>
                                        <div class="form-group form-group-cc-cvc">
                                            <label>CVV</label>
                                            <input class="form-control" placeholder="xxxx" type="text">
                                        </div>
                                    </div>
                                    <div class="clearfix">
                                        <div class="form-group form-group-cc-name">
                                            <label>Card Holder Name</label>
                                            <input class="form-control" type="text">
                                        </div>
                                        <div class="form-group form-group-cc-date">
                                            <label>Valid Thru</label>
                                            <input class="form-control" placeholder="mm/yy" type="text">
                                        </div>
                                    </div>
                                    <div class="checkbox checkbox-small">
                                        <label>
                                            <input class="i-check" type="checkbox" checked="">Add to My Cards
                                        </label>
                                    </div>
                                    <input class="btn btn-primary submit" type="submit" class="submit" value="Proceed Payment">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--Fin mensajes-->


                <!--Pestaña perfil-->
                <div id="perfil">
                </div>
                <!--Fin pestaña perfil-->
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Tarea != null)
{
    <script>
        window.onload = function () {
            swal('Correcto', 'Haz aceptado la tarea.', 'success')
        }
    </script>
}

@if (ViewBag.ActPerf != null)
{
    <script>
        window.onload = function () {
            swal('Correcto', 'Se actualizó la información de tu perfil', 'success')
        }
    </script>
}

<script src="@Url.Content("~/Recursos/BackEnd/js/jquery-2.0.3.min.js")" type="text/javascript"></script>

<script>
    $(document).ready(function (e) {
        $('#Inicio').load('/Tareas/TodasTareas', function (data) {
            $(this).html(data);
        })
    })
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tdispo').click(function () {
            $('#alltareas').load('/Tareas/TodasTareas');
        })
    })
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#pestmtareas').click(function () {
            $('#mistareas').load('/Tareas/TareasAcepUsuario');
        })
    })
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#pestPerfil').click(function () {
            $('#perfil').load('/Usuario/VerPerfil');
        })
    })
</script>

<!--Plug-in Initialisation-->
<script type="text/javascript">
    $(document).ready(function() {
        //Horizontal Tab
        $('#parentHorizontalTab').easyResponsiveTabs({
            type: 'default', //Types: default, vertical, accordion
            width: 'auto', //auto or any width like 600px
            fit: true, // 100% fit in a container
            tabidentify: 'hor_1', // The tab groups identifier
            activate: function(event) { // Callback function if tab is switched
                var $tab = $(this);
                var $info = $('#nested-tabInfo');
                var $name = $('span', $info);
                $name.text($tab.text());
                $info.show();
            }
        });
    });
</script>
