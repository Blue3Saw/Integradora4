@using System.Data;
@model DataTable

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/BackEnd/MasterPage/_layoutBackEnd.cshtml";
}

<div class="content">
    <div class="container-fluid">
@using (Ajax.BeginForm("DatosTarea", "AprobarTarea", new AjaxOptions() { HttpMethod = "POST" }))
{
    @Html.AntiForgeryToken()

        <div class="row">
            @foreach (DataRow row in Model.Rows)
            {
                <div class="col-md-4">
                    <div class="thumbnails">
                        <div class="span4">
                            <div class="thumbnail">
                                <img class="img-thumbnail" src="~/Recursos/BackEnd/img/descarga.jpg"/>
                                <div class="caption">
                                    <h3>@row["Titulo"]</h3>
                                    <p>@row["Descripcion"]</p>
                                    <div>
                                        <h6>@row["Empleador"]</h6>
                                    </div>
                                    <button type="submit" class="btn btn-success" name="boton" value="@row["Codigo"]">Visualizar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
}
        <div class="container-fluid">
            <div class="row">
                <button type="submit" class="btn btn-success">@Html.ActionLink("Reportes", "ReporteTareas", "Reportes")</button>
            </div>
        </div>
    </div>
</div>